<% content_for :title, "Friends" %>

<div id="friends">
    <table class="table table-striped table-dark table-hover table-bordered">
      <thead>
        <tr>
          <th scope="col">First name</th>
          <th scope="col">Last name</th>
          <th scope="col">Email</th>
          <th scope="col">Phone</th>
          <th scope="col">Twitter</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @friends.each do |friend| %>
        <tr>
          <td><%= friend.first_name %></td>
          <td><%= friend.last_name %></td>
          <td><%= friend.email %></td>
          <td><%= friend.phone %></td>
          <td><%= friend.twitter %></td>
          <td>
            <div class="d-flex gap-2">
              <%= link_to "Show this friend", friend, class: "btn btn-primary card_link" %>
              <%= link_to edit_friend_path(friend), class: "btn btn-success card_link" do %>
              <i class="fa fa-pencil" aria-hidden="true"></i>
              <% end %>
              <%= button_to friend, method: :delete, class: "btn btn-danger card_link" do %>
              <i class="fa fa-trash" aria-hidden="true"></i>
              <% end %>
            </div>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
</div>

<%= link_to "New friend", new_friend_path, class:"btn btn-secondary"  %>
